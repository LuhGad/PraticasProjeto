<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>FiltroLogin</filter-name>
        <filter-class>br.com.doceslubel.Controller.FiltroLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroLogin</filter-name>
        <url-pattern>/Usuario/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>cadastrarReceitas</servlet-name>
        <servlet-class>br.com.doceslubel.servlet.CadastrarReceitas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarUsuario</servlet-name>
        <servlet-class>br.com.doceslubel.servlet.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarProdutos</servlet-name>
        <servlet-class>br.com.doceslubel.servlet.ListarProdutos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>br.com.doceslubel.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastrarReceitas</servlet-name>
        <url-pattern>/cadastrarReceitas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarUsuario</servlet-name>
        <url-pattern>/cadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarProdutos</servlet-name>
        <url-pattern>/ListarProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping> 
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
